@model List<GestorDeInventario.Web.Models.ProdutoViewModel>

@{
    ViewData["Title"] = "Inventário de Produtos";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Index" method="get" class="mb-3">
    <div class="form-actions no-color">
        <p>
            Procurar por Nome: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Buscar" class="btn btn-info btn-sm" />
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Limpar Busca</a>
        </p>
    </div>
</form>

<p>
    <a class="btn btn-primary" asp-controller="Inventario" asp-action="Criar">Adicionar Novo Produto</a>
</p>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                    @Html.DisplayNameFor(model => model.First().Nome)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["QuantitySortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                    @Html.DisplayNameFor(model => model.First().Quantidade)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                    @Html.DisplayNameFor(model => model.First().Preco)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                    @Html.DisplayNameFor(model => model.First().DataValidade)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().StatusVencimento)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="align-middle">
                <td>@item.Nome</td>
                <td>@item.Quantidade</td>
                <td>@item.Preco.ToString("C")</td>
                <td>@item.DataValidadeFormatada</td>
                <td style="color:@item.CorStatusVencimento; font-weight:bold;">
                    @item.StatusVencimento
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Editar</a>
                    <a asp-action="Detalhes" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">Detalhes</a>
                    <a asp-action="Remover" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>