@model GestorDeInventario.Web.Models.ProdutoViewModel

@{
    ViewData["Title"] = "Remover Produto";
}

<h1>@ViewData["Title"]</h1>
<h3 class="text-danger">Tem a certeza que quer remover este produto permanentemente?</h3>
<div>
    <h4>Detalhes do Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class = "col-sm-9">
            @Model.Preco.ToString("C")
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.DataValidade)
        </dt>
        <dd class = "col-sm-9">
            @Model.DataValidadeFormatada
        </dd>
    </dl>
    
    <form asp-action="Remover">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Remover Definitivamente" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
    </form>
</div>